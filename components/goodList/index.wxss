@import '/app.wxss';
.goodList .item{position:relative;padding-left:20rpx;}
.goodList .item .pictrue{width:260rpx;height:200rpx;position:relative;}
.goodList .item .pictrue image{width:100%;height:100%;border-radius:6rpx;}
.goodList .item .pictrue .numPic{position:absolute;left:7rpx;top:7rpx;width:50rpx;height:50rpx;border-radius:50%;}
.goodList .item .underline{padding:20rpx 0rpx 20rpx 0;border-bottom:1px solid #f5f5f5;margin-left: 36rpx;}
.goodList .item:nth-last-child(1) .underline{border-bottom:0; }
.goodList .item .text{font-size:30rpx;color:#222;width:440rpx;}
.goodList .item .text .money{font-size:26rpx;font-weight:bold;}
.goodList .item .text .money .num{font-size:26rpx;}
.goodList .item .text .vip-money{font-size:24rpx;color:#282828;font-weight:bold;margin-top:8rpx;}
.goodList .item .text .vip-money span{color: #5A8CE9;font-size: 21rpx;background-color: #f1f1f1;padding: 0 4rpx;border-radius: 8rpx;}
.goodList .item .text .vip-money image{width:46rpx;height:21rpx;margin-left:5rpx;}
.goodList .item .text .vip-money .num{font-size:21rpx;color:#aaa;font-weight:normal;}
.goodList .item .text .vip-money .leixing{margin: 0 12rpx;color: #FF818E;margin-bottom: 6rpx;}
.goodList .item .iconfont{position:absolute;right:30rpx;width:50rpx;height:50rpx;border-radius:50%;font-size:30rpx;bottom:38rpx;}
.goodList .breviary .pictrue{width:220rpx;height:150rpx;}
.goodList .breviary{border: 20rpx solid #f5f5f5;}
.goodList .breviary:not(:last-child){border-bottom: 0rpx;}
.goodList .item .weizhi{display: flex;justify-content: space-between;align-items: center;margin: 8rpx 0rpx;width: 100%;padding-right: 20rpx;font-size: 26rpx;}
.goodList .item .weizhi view{display: flex;justify-content: flex-start;align-items: center;}
.goodList .item .weizhi view:nth-child(1){border-right: 1px solid #ccc;color: #898989;flex: 1;margin: 8rpx 0;height: 20rpx;}
.goodList .item .weizhi view:nth-child(2){margin: 0 30rpx;font-weight: bold;height: 50rpx;}
.goodList .item .weizhi image{width: 26rpx;height: 30rpx;margin-right: 10rpx;}
.goodList .item .weizhi .rengou{background-color: #308CED;color: #ffffff;padding: 10rpx 26rpx;height: 50rpx;border-radius: 6rpx;}